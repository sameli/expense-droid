<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item> <!-- to change All caps of menu items in action bar, also this fixes the color of menus -->
        <item name="actionMenuTextAppearance">@style/customActionBar</item> <!-- to change font size of menu -->
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <style name="AppTheme.ButtonRed" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Red</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.ButtonGreen" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Green</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.ButtonGray" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Gray</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="customActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
